+     * input: args[0] = apic id [31:0]
+     * output: args[0] = frequency in MHz[31:0]
+     */
+    {1, 1, HSMP_GET},
+
+    /*
+     * HSMP_GET_RAILS_SVI, num_args = 0, response_sz = 1
+     * output: args[0] = power in mW[31:0]
