(defpoll time :interval "10s"
  "date '+%H:%M %b %d, %Y'")

(defwidget timeAndDate[]
  (box :class "clock"
       :orientation "h"
       :halign "end"
       time))

(defwindow bar
  :monitor 1
  :exclusive true
  :geometry (geometry :x "0%"
                      :y "9px"
                      :width "98%"
                      :height "30px"
                      :anchor "top center")
  :stacking "fg"
  :windowtype "dock"
(bar))
