(defpoll calendar_day :interval "20h" "date '+%d'")
(defpoll calendar_year :interval "20h" "date '+%Y'")

(defpoll time :interval "10s"
  "date '+%H:%M'")

(defwidget clock[]
  (box :class "clock"
       :orientation "h"
       :halign "end"
       time))

(defwidget cal[]
  (calendar
    :class "calendar"
    :day calendar_day
    :year calendar_year
  ))

(defwindow dateTime
  :class "date-time"
  :monitor 1
  :exclusive true
  :geometry (geometry :x "0%"
                      :y "9px"
                      :width "5%"
                      :height "30px"
                      :anchor "top right")
  :stacking "fg"
(cal))

